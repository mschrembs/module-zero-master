<div ng-controller="app.views.tenants.index as vm">
    <div class="command-list row">
        <div class="col-lg-12 text-right">
            <a ng-href="#/tenants/create" class="btn btn-primary btn-raised"><i class="fa fa-asterisk"></i> New Tenant</a>
        </div>
    </div>

    <p><strong>Page:</strong> {{tableParams.page()}}</p>
    <p><strong>Count per page:</strong> {{tableParams.count()}}</p>
    <button ng-click="tableParams.sorting({})" class="btn btn-default pull-right">Clear sorting</button>
    <p><strong>Sorting:</strong> {{tableParams.sorting()|json}}</p>

        <table ng-table="tableParams" class="table">
            <tr ng-repeat="tenant in vm.tenants">
                <td><i class="mdi-action-home"></i></td>
                <td data-title="'Name'" sortable="'name'">{{tenant.name}}</td>
                <td data-title="'IsActive'" sortable="'isactive'">{{tenant.isActive}}</td>
                <td><a ng-href="#/tenants/update/{{tenant.id}}" class="btn btn-primary btn-raised"><i class="fa fa-pencil-square-o"></i> @L("TenantUpdate")</a></td>
                <td><button id="{{tenant.id}}" ng-click="vm.showTenantDeleteDialog($event)" class="btn btn-primary btn-raised"><i class="fa fa-trash"></i> @L("TenantDelete")</button></td>
            </tr>
        </table>
</div>